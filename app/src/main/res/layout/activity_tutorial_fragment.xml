<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogFragment">

    <ImageView
        android:id="@+id/tutorial_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:background="#B3000000"
        android:src="@drawable/tutorial_chat"/>

    <ImageButton
        android:id="@+id/button_tutorial_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:background="@drawable/button_exit"
        android:visibility="invisible"
        android:src="@drawable/img_left" />

    <ImageButton
        android:id="@+id/button_tutorial_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/button_exit"
        android:src="@drawable/img_right" />

    <ImageButton
        android:id="@+id/button_tutorial_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_exit"
        android:src="@drawable/img_exit" />
</RelativeLayout>

